<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lotteryandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_lotto"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lotteryandroid.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
    		android:name=".PlayScreen"
    		android:label="@string/play_screen">
		</activity>
		<activity
    		android:name=".SignPage"
    		android:label="@string/sign_page">
		</activity>
		<activity
    		android:name=".NumberScreen"
    		android:label="@string/number_screen">
		</activity>
		<activity
    		android:name=".SettingsScreen"
    		android:label="@string/settings_screen">
		</activity>
		
    </application>

</manifest>
